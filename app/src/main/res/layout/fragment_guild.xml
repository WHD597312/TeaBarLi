<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout"
    >
    <ImageView
        android:id="@+id/iv_guide_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/img_guide"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/iv_guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/w1"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_guild_button"
        android:layout_marginBottom="40dp"
        />


    <ImageView
        android:id="@+id/tv_guild_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/guild_button"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        />


</RelativeLayout>
