<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/li_main_title"
                    android:layout_width="match_parent"
                    android:background="@drawable/main_title"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        >

                        <ImageView
                            android:id="@+id/iv_main_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_online3"
                            android:scaleType="centerInside"
                            android:layout_marginLeft="15dp"
                            android:layout_alignTop="@+id/tv_main_online"
                            android:layout_alignBottom="@+id/tv_main_online"
                            />
                        <TextView
                            android:id="@+id/tv_main_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/equ_xq_outline"
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="5dp"

                            />

                    <TextView
                        android:id="@+id/tv_main_hot"
                        android:layout_below="@+id/tv_main_online"
                        android:layout_alignLeft="@+id/tv_main_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/equ_xq_nohot"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_main_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_error3"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp"
                        />
                    <TextView
                        android:id="@+id/tv_main_error"
                        android:layout_below="@+id/iv_main_error"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:text="Water Level"
                        />
                </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_home_page"
                        android:textSize="30sp"
                        android:textColor="#101010"
                        android:layout_marginLeft="15dp"

                        />
                    <ImageView
                        android:id="@+id/iv_main_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/main_ss3"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        />
                    <ImageView
                        android:id="@+id/iv_main_sm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/main_sm3"
                        android:scaleType="centerInside"
                        android:layout_toLeftOf="@+id/iv_main_search"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_main_bz1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_home_hello"
                        android:textSize="20sp"
                        android:textColor="#606060"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:id="@+id/tv_main_name"
                        android:layout_toRightOf="@+id/tv_main_bz1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘先生"
                        android:textSize="20sp"
                        android:textColor="#606060"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        />

                </RelativeLayout>

                <!-- 横向列表 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/main_title">

                    <TextView
                        android:id="@+id/tv_weather_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/adress_hot_41"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_weather_place"
                        android:layout_alignBottom="@+id/tv_weather_place"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/tv_weather_place"
                        android:scaleType="centerInside"
                        android:src="@mipmap/main_locial3" />

                    <LinearLayout
                        android:id="@+id/li_main_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_weather_place"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/tv_weather_tq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_weather_wd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:text="24℃"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_weather_sd1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/weather_sd"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_weather_sd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:text="60％"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/li_main_temp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/weather_foryou"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_weather_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Balance"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_weather_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_weather_project"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:text="Black bean round meat tea"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@+id/bt_make"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        />

                    <Button
                        android:id="@+id/bt_make"
                        android:layout_width="73dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_today"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/weather_button"
                        android:text="@string/equ_xq_cp"
                        android:textColor="#2bdca3"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <ImageView
                        android:id="@+id/iv_weather_left"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/choose_left"
                        />
                    <TextView
                        android:id="@+id/tv_weather_day"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:text="today,monday"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_toRightOf="@+id/iv_weather_left"
                        />
                    <ImageView
                        android:id="@+id/iv_weather_right"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/choose_right"
                        android:layout_toRightOf="@+id/tv_weather_day"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_main_question"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/main_healthcard"
                    >
                    <ImageView
                        android:id="@+id/iv_wj_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wj_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/wj_logo"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        />

                    <TextView
                    android:id="@+id/tv_wj_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_below="@+id/iv_wj_title"
                    android:text="@string/main_home_wj1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
                    <TextView
                        android:id="@+id/tv_wj_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="20dp"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_below="@+id/tv_wj_1"
                        android:text="@string/main_home_wj2"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />
                    <Button
                        android:id="@+id/bt_main_dt"
                        android:layout_width="115dp"
                        android:layout_height="25dp"
                        android:background="@drawable/weather_button"
                        android:layout_above="@+id/li_wj_but"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="#333333"
                        android:textSize="11sp"
                        android:text="@string/main_home_wjcs"
                        />
                    <LinearLayout
                        android:id="@+id/li_wj_but"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/main_wjcard"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wj_time"
                        android:layout_gravity="center_vertical"

                        />
                    <TextView
                        android:id="@+id/tv_main_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_home_wj3"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="10sp"
                        />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/main_messagecard"
                    android:paddingBottom="27dp"
                    >
                    <TextView
                        android:id="@+id/tv_main_knowt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_power_know"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="17dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_below="@+id/tv_main_knowt"
                        android:id="@+id/tv_main_know"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="17dp"
                        android:textSize="14sp"
                        android:layout_marginRight="17dp"
                        android:text="早上起来喝一杯蜂蜜水，可以增加人体新城代谢，要注意小口喝哦！"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_main_tealist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"

                        />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/li_main_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:id="@+id/iv_main_logo1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/logo"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/tv_tea_name"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/my_healthplan"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/iv_main_logo1"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_main_jh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="20dp"
                    />

            </LinearLayout>
        </ScrollView>

</LinearLayout>