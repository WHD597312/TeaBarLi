<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_make_pic"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/tv_make_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_make_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/iv_make_love"
        android:text="姜香茅养生茶"
        android:textColor="#454545"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_make_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_make_style"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="21dp"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/iv_make_love"
        android:text="排毒系列"
        android:textColor="#454545"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/iv_make_love"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/make_no1"
        android:layout_alignTop="@+id/tv_make_style"
        android:layout_toLeftOf="@+id/iv_make_share"
        android:scaleType="centerCrop"
        android:layout_marginRight="15dp"
        />
    <ImageView
        android:id="@+id/iv_make_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/make_share1"
        android:layout_alignTop="@+id/tv_make_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        />
    <TextView
        android:id="@+id/tv_mes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dddd"
        android:layout_below="@+id/tv_make_name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#454545"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_make_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一种起源于古代东方的茶，具有丰富的风味和社会效益。由于生姜的有效成分，这种草药茶是对正常消化功能的理想支持，并改善正常的生理活动。"
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_below="@+id/tv_mes_title"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tea_kouwei_kw"
        android:layout_below="@+id/tv_make_mes"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#454545"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_toast_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一种起源于古代东方的茶，具有丰富的风味和社会效益。由于生姜的有效成分，这种草药茶是对正常消化功能的理想支持，并改善正常的生理活动。"
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_below="@+id/tv_toast"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />


    <TextView
        android:id="@+id/tv_plmes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dddd"
        android:layout_below="@+id/tv_toast_mes"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#454545"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_make_plmes"
        android:text="姜、柠檬草、鼠尾草"
        android:layout_below="@+id/tv_plmes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="14sp"
        android:textColor="#777777"
        />
    <TextView
        android:id="@+id/tv_make_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_method"
        android:layout_below="@+id/tv_make_plmes"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:textColor="#454545"
        android:textSize="16sp"
        />
    <LinearLayout
        android:id="@+id/li_make_method"
        android:layout_below="@+id/tv_make_method"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/make_wd"
            />
        <TextView
            android:id="@+id/tv_make_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80℃"
            android:textColor="@color/social_gray"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/make_tea"
            android:layout_marginLeft="36dp"
            />
        <TextView
            android:id="@+id/tv_make_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300ml"
            android:textColor="@color/social_gray"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/make_time"
            android:layout_marginLeft="36dp"
            />
        <TextView
            android:id="@+id/tv_make_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30S"
            android:textColor="@color/social_gray"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_make_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/make_ff"
        android:layout_below="@+id/tv_make_plmes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/bt_make_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_star"
        android:textColor="@color/white"
        android:background="@mipmap/login_button"
        android:layout_below="@+id/li_make_method"
        android:paddingBottom="10dp"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />
    <Button
        android:id="@+id/bt_make_buy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/equ_xq_buy"
        android:textColor="#929cf9"
        android:background="@drawable/make_button1"
        android:layout_below="@+id/bt_make_make"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="25dp"
        />
</RelativeLayout>
</ScrollView>
    <ImageView
        android:id="@+id/iv_equ_fh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerInside"
        android:src="@mipmap/make_fh"
        />
</RelativeLayout>