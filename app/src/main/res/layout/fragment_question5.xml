<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/question_bj"
        >
        <ImageView
            android:id="@+id/iv_power_fh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/wj_close1"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/iv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_base10"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            />



        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/question_base5"
            android:layout_below="@+id/iv_question_title"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingBottom="73dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_question"
        android:layout_marginTop="-65dp"
        />


    <TextView
        android:id="@+id/et_ques_weight"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_question"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="18dp"
        android:background="@null"
        android:hint="KG"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:textColor="#454545"
        android:textSize="15sp"
      />

    <View
        android:layout_below="@+id/et_ques_weight"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        />
    <TextView
        android:id="@+id/et_ques_tall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:layout_below="@+id/et_ques_weight"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:hint="CM"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="#454545"

        />
    <View
        android:layout_below="@+id/et_ques_tall"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        />
    <Button
        android:id="@+id/bt_question1_esure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_ques_tall"
        android:layout_marginRight="20dp"
        android:background="@mipmap/wj_button"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        />

</RelativeLayout>
