<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/question_bj"
        >
        <ImageView
            android:id="@+id/iv_power_fh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/wj_close1"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/iv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_base10"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            />



        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/question_base3"
            android:layout_below="@+id/iv_question_title"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingBottom="73dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_question"
        android:layout_marginTop="-60dp"
        />


    <TextView
        android:id="@+id/tv_question_sex"
        android:layout_below="@+id/rl_question"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_set_xb"
        />
    <LinearLayout
        android:id="@+id/li_question_man"
        android:layout_below="@+id/tv_question_sex"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_question_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/choose_nan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_set_man"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_question_women"
        android:layout_alignTop="@id/li_question_man"
       android:layout_toRightOf="@+id/li_question_man"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_question_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_xz2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_set_women"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_question_birthday"
        android:layout_below="@+id/li_question_man"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_set_old"
        />
    <TextView
        android:id="@+id/et_question_birthday"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_question_birthday"
        android:gravity="center_vertical"
        android:background="#f5f5f5"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/question_xx"
        android:layout_alignTop="@+id/et_question_birthday"
        android:layout_alignRight="@+id/et_question_birthday"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/tv_question_place"
        android:layout_below="@+id/et_question_birthday"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_set_place"
        />

    <TextView
        android:id="@+id/et_question_place"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_question_place"
        android:background="#f5f5f5"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/question_xx"
        android:layout_alignTop="@+id/et_question_place"
        android:layout_alignRight="@+id/et_question_place"
        android:scaleType="centerInside"
        />
    <Button
        android:id="@+id/bt_question1_esure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_question_place"
        android:layout_marginRight="20dp"
        android:background="@mipmap/wj_button"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        />

</RelativeLayout>
