<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:myapp="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/li_main_title"
        android:layout_width="match_parent"
        android:background="@drawable/main_title"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:id="@+id/iv_main_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_online3"
            android:scaleType="centerInside"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/tv_main_online"
            android:layout_alignBottom="@+id/tv_main_online"
            />
        <TextView
            android:id="@+id/tv_main_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/equ_xq_outline"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/tv_main_hot"
            android:layout_below="@+id/tv_main_online"
            android:layout_alignLeft="@+id/tv_main_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/equ_xq_nohot"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/iv_main_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_error3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            />
        <TextView
            android:id="@+id/tv_main_error"
            android:layout_below="@+id/iv_main_error"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:text="Water Level"
            />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_power_fh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        android:layout_below="@+id/li_main_title"
        />


    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_makemethod"
        android:layout_below="@+id/iv_power_fh"
        android:layout_marginLeft="17dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
    <ImageView
        android:id="@+id/tv_method_change"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:layout_alignBottom="@+id/tv_power"
        android:layout_toRightOf="@+id/tv_power"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/addmethod_rename"
        />
    <ImageView
        android:id="@+id/tv_add_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/addmethod_save"
        android:scaleType="centerInside"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/nomal_green"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/tv_power"

        />
    <teabar.ph.com.teabar.view.MyView
        android:id="@+id/arcprogressBar"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/tv_power"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        myapp:StrokeWith="20dp"
      />
    <TextView
        android:layout_alignTop="@+id/arcprogressBar"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:text="65"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/social_gray"
        android:layout_toLeftOf="@+id/arcprogressBar"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_alignTop="@+id/arcprogressBar"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:text="95"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/social_gray"
        android:layout_toRightOf="@+id/arcprogressBar"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:id="@+id/li_make_temp"
        android:layout_alignTop="@+id/arcprogressBar"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_add_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90â„ƒ"
            android:textSize="25sp"
            android:textColor="#454545"
            />


    </LinearLayout>
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_temp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/li_make_temp"
        android:layout_marginTop="10dp"
        android:textColor="@color/social_gray"
        android:gravity="center"
        android:textSize="14sp"
        />
    <teabar.ph.com.teabar.view.MyView1
        android:id="@+id/arcprogressBar1"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/arcprogressBar"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        />
    <TextView
        android:layout_alignTop="@+id/arcprogressBar1"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:text="5"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/social_gray"
        android:layout_toLeftOf="@+id/arcprogressBar1"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_alignTop="@+id/arcprogressBar1"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:text="30"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/social_gray"
        android:layout_toRightOf="@+id/arcprogressBar1"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:id="@+id/li_make_time"
        android:layout_alignTop="@+id/arcprogressBar1"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30S"
            android:textSize="25sp"
            android:textColor="#454545"
            android:paddingRight="5dp"
            />


    </LinearLayout>
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_time"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/li_make_time"
        android:layout_marginTop="5dp"
        android:textColor="@color/social_gray"
        android:gravity="center"
        android:textSize="14sp"
        />
   <!--<teabar.ph.com.teabar.view.VerticalProgressBar1-->
       <!--android:id="@+id/verticalProgressBar1"-->
       <!--android:layout_width="100dp"-->
       <!--android:layout_height="180dp"-->
       <!--android:layout_centerHorizontal="true"-->
       <!--android:paddingTop="90dp"-->
       <!--android:layout_below="@+id/arcprogressBar"-->
       <!--android:layout_marginTop="-140dp"-->
       <!--/>-->



    <teabar.ph.com.teabar.view.MySeekBar
        android:id="@+id/beautySeekBar4"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/arcprogressBar"
        android:layout_alignLeft="@+id/arcprogressBar"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-90dp"
        android:rotation="270"
        android:max="350"
        android:min="0"
        android:progressDrawable="@drawable/bg_seekbar_progress_drawable"
        android:thumb="@null"
        app:textBackground="@mipmap/add_make"
        app:textColor="#666666"
        app:textOrientation="top"
        app:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/equ_xq_mr1"
            android:textSize="15sp"
            android:background="@drawable/question_button2"
            android:layout_marginLeft="15dp"
            android:textColor="#333"
            android:layout_marginRight="10dp"

            />

        <Button
            android:id="@+id/btn_make"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/equ_xq_cp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/btn_back"
            android:background="@mipmap/make_newbutton"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>

</RelativeLayout>
