<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    >
    <ImageView
        android:id="@+id/iv_login_logo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wj_logo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="27dp"
        />

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_login_logo1"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp"
        />


    <EditText
        android:id="@+id/et_login_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_login_logo"
        android:layout_toRightOf="@+id/iv_login_user"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/login_edtext"
        android:hint="@string/login_et_user"
        android:paddingLeft="15dp"
        android:textColorHint="#9d9d9d"
        android:textColor="#333333"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/iv_login_user"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/loign_user1"
        android:layout_alignTop="@+id/et_login_user"
        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/et_login_pasw"
        android:layout_below="@+id/et_login_user"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_edtext"
        android:layout_toRightOf="@+id/login_iv_seepassw"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#333"
        android:textColorHint="#9d9d9d"
        android:inputType="textPassword"
        android:hint="@string/login_et_pass"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        />
    <ImageView
        android:id="@+id/login_iv_seepassw"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/loign_pass1"
        android:layout_alignTop="@+id/et_login_pasw"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_forget"
        android:layout_below="@+id/et_login_pasw"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:textColor="#999999"
        />
    <LinearLayout
        android:id="@+id/li_login_repass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/et_login_pasw"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="18dp"
        >
        <ImageView
            android:id="@+id/iv_login_repass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_xz"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_login_rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_rem"
            android:textSize="16sp"
            android:textColor="#999999"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/bt_login_ensure"
        android:layout_below="@+id/tv_login_forget"
        android:layout_marginTop="30dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:background="@mipmap/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/login_tv_login"
        />
    <TextView
        android:id="@+id/tv_bj1"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
  <!--  <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="30dp" />-->

    <RelativeLayout
        android:id="@+id/rl_login_third"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bt_login_ensure"
        android:layout_alignLeft="@+id/bt_login_ensure"
        android:layout_marginTop="20dp"

        >
        <View
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_third_login"
            android:layout_marginRight="20dp"
            android:layout_height="0.6dp"
            android:layout_marginLeft="6dp"
            android:background="@color/social_gray"
            />
        <TextView
            android:id="@+id/tv_third_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_third"
            android:textColor="#bbbbbb"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_third_login"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="6dp"
            android:layout_height="0.6dp"
            android:background="@color/social_gray"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_login_third"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/facebook"
            />

        <ImageView
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:src="@mipmap/google"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_login_regist"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <!--android:text="@string/login_tv_regist1"-->
        <TextView
            android:id="@+id/tv_login_tk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:textColor="@color/social_gray"
            />


    </LinearLayout>

</RelativeLayout>
