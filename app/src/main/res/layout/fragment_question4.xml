<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/question_bj"
        >
        <ImageView
            android:id="@+id/iv_power_fh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/wj_close1"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/iv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_base10"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            />



        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/question_base4"
            android:layout_below="@+id/iv_question_title"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingBottom="73dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_question"
        android:layout_marginTop="-60dp"
        />

    <RelativeLayout
        android:id="@+id/li_question_man"
        android:layout_below="@+id/rl_question"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18sp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_question_choose1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/question_choose"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_search1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#9d9d9d"
            android:layout_toLeftOf="@+id/iv_question_choose1"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/personal_set_yes"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/li_question_women"
        android:layout_below="@+id/li_question_man"

        android:layout_marginLeft="18dp"
        android:layout_marginRight="18sp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_question_choose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/question_choose"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_search2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#9d9d9d"
            android:layout_toLeftOf="@+id/iv_question_choose2"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/personal_set_no"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_question1_esure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/li_question_women"
        android:layout_marginRight="20dp"
        android:background="@mipmap/wj_button"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        />

</RelativeLayout>
